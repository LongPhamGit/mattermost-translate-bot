{
  "manifest_version": 3,
  "name": "Message Logger",
  "version": "1.0",
  "description": "Nhận tin nhắn từ Render và lưu vào log HTML.",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://mattermost-translate-bot.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
